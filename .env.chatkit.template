# OpenAI ChatKit Configuration Template
# Copy this to .env.local and fill in your values

# Required: Your OpenAI API Key
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Required: Your Agent Builder Workflow ID
# Get this from Agent Builder after creating your workflow
# Format: wf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_WORKFLOW_ID=wf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Required: Supabase Service Role Key (for secure session creation)
# Get this from: Your Supabase project > Settings > API
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxxxxxxxxx

# Optional: OpenAI Organization ID (if using organization)
OPENAI_ORG_ID=org-xxxxxxxxxxxxxxxxxxxxx

# Optional: ChatKit API Version (defaults to latest)
OPENAI_CHATKIT_VERSION=v1

# Optional: Enable debug logging
CHATKIT_DEBUG=false

# Optional: Session expiry time in hours (default 24)
CHATKIT_SESSION_EXPIRY_HOURS=24

# Feature flags (optional)
ENABLE_CHATKIT_WIDGETS=true
ENABLE_CHATKIT_ANALYTICS=true
ENABLE_CHATKIT_FILE_UPLOADS=false

# Rate limiting (optional)
CHATKIT_MAX_SESSIONS_PER_USER=5
CHATKIT_MAX_MESSAGES_PER_MINUTE=30

# Widget configuration (optional)
CHATKIT_MAX_WIDGET_SIZE=1048576  # 1MB in bytes
CHATKIT_ALLOWED_WIDGET_TYPES=card,list,form,chart

# Analytics endpoints (optional)
CHATKIT_ANALYTICS_ENDPOINT=https://your-analytics-endpoint.com
CHATKIT_ERROR_TRACKING_ENDPOINT=https://your-error-tracking.com
